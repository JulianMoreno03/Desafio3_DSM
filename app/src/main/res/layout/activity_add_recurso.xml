<!-- activity_add_recurso.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <EditText
        android:id="@+id/tituloEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título" />

    <EditText
        android:id="@+id/descripcionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción" />

    <EditText
        android:id="@+id/tipoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo" />

    <EditText
        android:id="@+id/enlaceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enlace" />

    <EditText
        android:id="@+id/imagenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL de la Imagen" />

    <Button
        android:id="@+id/agregarRecursoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Recurso" />
</LinearLayout>
